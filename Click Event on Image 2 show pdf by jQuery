          ====  jquery part===
          <script>
           $(function () {
            $('#pdffile').hide();
            $('#pdffile1').hide();
            $('#pdffile2').hide();
            $('#eppr').click(function () {
                $('#pdffile').show();
                $('#pdffile1').hide();
                $('#pdffile2').hide();
            });
            $('#eppr1').click(function () {
                $('#pdffile1').show();
                $('#pdffile').hide();
                $('#pdffile2').hide();
            });
            $('#eppr2').click(function () {
                $('#pdffile2').show();
                $('#pdffile').hide();
                $('#pdffile1').hide();
            });
          </script>
